<odoo>
    <data>
        <record id="retail_sale_order_form" model="ir.ui.view">
            <field name="name">sale.order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_confirm']" position="after">
                    <field name="edit" invisible="1"/>
                    <button name="edit_price" string="Edit Price" type="object" states="done" class="oe_highlight"/>
                    <button name="update_price" string="Update" type="object" states="sale" class="oe_highlight"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="attributes">
                    <attribute name="readonly">0</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="before">
                    <field name="edit" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="attributes">
                    <attribute name="attrs">{'readonly': [('edit', '=', 0)]}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>